{
  "name": "lmutracker",
  "version": "1.0.5",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "dotenv electron-builder",
    "publish": "dotenv electron-builder -- --publish always"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "build": {
    "appId": "com.lmutracker.app",
    "productName": "LMU Tracker",
    "asar": true,
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**/*",
      "LMUTrackerLogo.ico"
    ],
    "afterPack": "build/afterPack.js",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!.env",
      "!.env.example",
      "LMUTrackerLogo.ico"
    ],
    "win": {
      "icon": "LMUTrackerLogo.ico",
      "target": [
        "nsis"
      ],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "LMUTrackerLogo.ico",
      "uninstallerIcon": "LMUTrackerLogo.ico",
      "installerHeaderIcon": "LMUTrackerLogo.ico",
      "include": "build/installer.nsh",
      "deleteAppDataOnUninstall": false
    },
    "publish": {
      "provider": "github",
      "owner": "arkyan",
      "repo": "LMUTracker"
    }
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "electron-updater": "^6.6.2",
    "fast-xml-parser": "^5.2.5"
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "rcedit": "^5.0.2"
  }
}
